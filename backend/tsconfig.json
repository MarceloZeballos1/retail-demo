{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@model/*": ["src/model/*"],
      "@model": ["src/model"],
      "@controller/*": ["src/controller/*"],
      "@controller": ["src/controller"],
      "@service": ["src/service"],
      "@service/*": ["src/service/*"],
      "@route/*": ["src/route/*"],
      "@route": ["src/route"],
      "@middleware/*": ["src/middleware/*"],
      "@middleware": ["src/middleware"],
      "@util/*": ["src/utils/*"],
      "@util": ["src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

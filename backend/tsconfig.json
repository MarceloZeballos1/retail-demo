{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@model/*": ["src/model/*"],
      "@controller/*": ["src/controller/*"],
      "@service/*": ["src/service/*"],
      "@route/*": ["src/route/*"],
      "@middleware/*": ["src/middleware/*"],
      "@util/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
